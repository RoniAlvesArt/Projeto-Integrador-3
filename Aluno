package pi3;

import java.util.Scanner;

public class Aluno extends Pessoa {

    Pessoa Aluno = new Pessoa();
    Scanner input = new Scanner(System.in);

    public void cadastrarAluno() {

        System.out.println("Insira uma nova matrícula: ");
        Aluno.setMatricula(input.nextInt());
        System.out.println("Qual é o nome?");
        Aluno.setNome(input.nextLine());
        System.out.println("Qual é a idade?");
        Aluno.setIdade(input.nextDouble());

    }

    public void mostrarAluno() {
        System.out.println("Qual é a matrícula?");
           
    }
}
